[database]# For the embedded DB: org.hsqldb.jdbcDriver# For PostgreSQL: org.postgresql.Driver# Defaults to embedded DBclassname = <%= @db_driver %># For the embedded DB: hsqldb# For PostgreSQL: postgresql# Defaults to embedded DBsubprotocol = <%= @db_protocol %># For the embedded DB: file:/path/to/database;hsqldb.tx=mvcc;sql.syntax_pgs=true# For PostgreSQL: //host:port/databaseName# Defaults to embedded DB located in <vardir>/dbsubname = <%= @db_name %># Connect as a specific user<% if @db_username -%>username = <%= @db_username %><% else -%># username = foobar<% end -%># Use a specific password<% if @db_password -%>password = <%= @db_password %><% else -%># password = foobar<% end -%># How often (in minutes) to compact the database# gc-interval = 60# Number of seconds before any SQL query is considered 'slow'; offending# queries will not be interrupted, but will be logged at the WARN log level.log-slow-statements = 10